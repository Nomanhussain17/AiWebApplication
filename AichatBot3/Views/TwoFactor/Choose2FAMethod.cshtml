@model LoginWith2faViewModel
@{
    ViewData["Title"] = "Choose 2FA Method";
}

<h2>Choose 2FA Method</h2>

<form asp-action="Choose2FAMethod" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <input type="hidden" asp-for="RememberMe" />

    <div class="form-check">
        <input class="form-check-input" type="radio" name="method" value="Email" id="email" checked />
        <label class="form-check-label" for="email">Email Verification</label>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="radio" name="method" value="Authenticator" id="authenticator" />
        <label class="form-check-label" for="authenticator">Google Authenticator</label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Continue</button>
</form>
